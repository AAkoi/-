---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import FeatureCard from "@/components/mdx/FeatureCard.astro";
---

<BaseLayout title="Home">
  <MainCard
    title="欢迎来到 Blueaoi 的技术博客"
    description="记录硬件设计、FPGA、嵌入式开发的技术心得与项目实践。"
    textOverlay="首页"
    infoIcon="lucide:info"
    image="/image/background/home.png"
  >
    <div class="space-y-8">
      <!-- Hero Section -->
      <section class="py-6">
        <div class="flex flex-col items-center text-center">
          <h1
            class="text-4xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent leading-loose"
          >
             Blueaoi 的博客
          </h1>
          <p class="text-xl text-base-content/80 max-w-3xl mb-8">
            时常分享硬件设计，嵌入式系统，项目经验。
          </p>
          <div class="flex flex-wrap gap-4 justify-center">
            <a href="/blog" class="btn btn-primary gap-2 btn-shine-effect">
              <Icon name="lucide:book-open" class="w-5 h-5" />
              <span>查看文章</span>
            </a>
            <a href="https://github.com/AAkoi" target="_blank" class="btn btn-outline gap-2">
              <Icon name="lucide:github" class="w-5 h-5" />
              <span>访问 GitHub</span>
            </a>
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section class="py-6">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:sparkles" class="w-6 h-6 text-primary" />
          <span>博客特点</span>
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <FeatureCard
            title="硬件设计"
            description="分享 PCB 设计、原理图绘制和硬件调试经验。"
            icon="lucide:circuit-board"
            color="oklch(0.65 0.2 280)"
          />

          <FeatureCard
            title="嵌入式系统"
            description="探索嵌入式软件开发编程。"
            icon="lucide:microchip"
            color="oklch(0.6 0.2 160)"
          />


          <FeatureCard
            title="技术笔记"
            description="整理技术文档、学习笔记和开发工具使用心得。"
            icon="lucide:book-open"
            color="oklch(0.8 0.2 80)"
          />

          <FeatureCard
            title="开源分享"
            description="分享代码、项目文件和技术方案，助力开源社区。"
            icon="lucide:github"
            color="oklch(0.7 0.2 10)"
          />
        </div>
      </section>

      <!-- 关于我 -->
      <section class="py-6">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:user" class="w-6 h-6 text-primary" />
          <span>关于我</span>
        </h2>

        <div class="card bg-base-200 p-6">
          <div class="flex flex-col md:flex-row gap-6 items-center">
            <div class="avatar">
              <div class="w-32 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
                <img src="/profile.png" alt="AAkoi" />
              </div>
            </div>
            <div class="flex-1 text-center md:text-left">
              <h3 class="text-2xl font-bold mb-2">AAkoi</h3>
              <p class="text-base-content/80 mb-4">
                热爱开源，喜欢分享技术心得。
              </p>
              <div class="flex gap-3 justify-center md:justify-start">
                <a href="https://github.com/AAkoi" target="_blank" class="btn btn-sm btn-outline gap-2">
                  <Icon name="lucide:github" class="w-4 h-4" />
                  GitHub
                </a>
                <a href="/blog" class="btn btn-sm btn-primary gap-2">
                  <Icon name="lucide:book-open" class="w-4 h-4" />
                  查看文章
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </MainCard>
</BaseLayout>
