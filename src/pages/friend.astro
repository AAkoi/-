---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
---

<BaseLayout title="Friends">
  <MainCard
    title="还不快来交朋友！"
    description="虽然现在还没有友链，但...但我才不是寂寞呢！"
    textOverlay="友链"
    infoIcon="lucide:sparkles"
    image="/image/background/friends.webp"
    extraClasses="hero-cute-anime"
  >
      <div class="text-center py-12">
        <div class="mb-8">
          <Icon name="lucide:heart" class="w-24 h-24 mx-auto text-pink-400/40 animate-pulse" />
        </div>
        <h2 class="text-3xl font-bold mb-4 bg-gradient-to-r from-orange-400 via-pink-400 to-amber-400 bg-clip-text text-transparent">
          友链征集中！
        </h2>
        <p class="text-base-content/80 mb-8 max-w-md mx-auto text-lg">
          想和我做朋友吗？来 GitHub 找我吧～
        </p>
        <a
          href="https://github.com/AAkoi"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary gap-2"
        >
          <Icon name="lucide:github" class="w-5 h-5" />
          <span>访问我的 GitHub</span>
        </a>
      </div>
    </MainCard>
</BaseLayout>
