---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
---

<BaseLayout title="Friends">
  <MainCard
    title="友链"
    description="目前还没有友链，欢迎交换友链！"
    textOverlay="友链"
    infoIcon="lucide:link"
    image="/image/background/friends.webp"
  >
      <div class="text-center py-12">
        <div class="mb-8">
          <Icon name="lucide:link" class="w-24 h-24 mx-auto text-primary/30" />
        </div>
        <h2 class="text-3xl font-bold mb-4">暂无友链</h2>
        <p class="text-base-content/70 mb-8 max-w-md mx-auto">
          如果你想和我交换友链，欢迎通过 GitHub 联系我！
        </p>
        <a
          href="https://github.com/AAkoi"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary gap-2"
        >
          <Icon name="lucide:github" class="w-5 h-5" />
          <span>访问我的 GitHub</span>
        </a>
      </div>
    </MainCard>
</BaseLayout>
