---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
---

<BaseLayout title="Projects">
  <MainCard
    title="项目"
    description="正在开发中的项目和想法。"
    textOverlay="项目"
    infoIcon="lucide:code-2"
    image="/image/background/project.png"
  >
    <div class="text-center py-12">
      <div class="mb-8">
        <Icon name="lucide:rocket" class="w-24 h-24 mx-auto text-primary/30" />
      </div>
      <h2 class="text-3xl font-bold mb-4">项目开发中</h2>
      <p class="text-base-content/70 mb-8 max-w-md mx-auto">
        正在开发一些有趣的项目，敬请期待！可以在 GitHub 查看我的代码。
      </p>
      <a
        href="https://github.com/AAkoi"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-primary gap-2"
      >
        <Icon name="lucide:github" class="w-5 h-5" />
        <span>访问我的 GitHub</span>
      </a>
    </div>
  </MainCard>
</BaseLayout>
